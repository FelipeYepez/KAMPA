<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.SitiosFavoritosFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="@string/nombre_de_la_lista"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <ImageButton
            android:id="@+id/ibChangeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tvTitle"
            android:layout_above="@id/rvSitiosFavoritos"
            android:layout_alignTop="@+id/tvTitle"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_menu_edit"
            app:tint="@color/blue_color" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSitiosFavoritos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/fabAdd"
            android:layout_below="@+id/tvTitle"
            android:layout_marginTop="15dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="20dp"
            android:backgroundTint="@color/accent_color"
            android:src="@android:drawable/ic_input_add"/>
    </RelativeLayout>


</FrameLayout>