<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SitioActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:background="#14B2B2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autoSizeMaxTextSize="25sp"
                    android:autoSizeMinTextSize="12sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:gravity="center"
                    android:text="TextView"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/foto"
                    android:layout_width="wrap_content"
                    android:maxHeight="60dp"
                    android:maxWidth="60dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/default_sitio" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <ImageButton
                    android:id="@+id/addWishListBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45dp"
                    app:srcCompat="@drawable/icono_favoritos"
                    android:background="@color/white"/>

                <TextView
                    android:id="@+id/addWishListText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Guardar"
                    android:textSize="14dp" />

                <ImageButton
                    android:id="@+id/VisitedBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45dp"
                    app:srcCompat="@drawable/marker"
                    android:background="@color/white"/>

                <TextView
                    android:id="@+id/VisitedText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Guardar"
                    android:textSize="14dp" />

            </LinearLayout>



            <TextView
                android:id="@+id/titleDescripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="45dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="45dp"
                android:layout_marginBottom="0dp"
                android:textStyle="bold"
                android:text="DescripciÃ³n"
                android:textSize="24dp"/>

            <TextView
                android:id="@+id/descripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/titleDescripcion"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="45dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="45dp"
                android:layout_marginBottom="0dp"
                android:text="TextView"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/titleHistoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/descripcion"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="45dp"
                android:textStyle="bold"
                android:layout_marginTop="75dp"
                android:layout_marginEnd="45dp"
                android:layout_marginBottom="0dp"
                android:text="Historia"
                android:textSize="24dp"/>

            <TextView
                android:id="@+id/historia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/titleHistoria"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="45dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="45dp"
                android:layout_marginBottom="0dp"
                android:text="TextView"
                android:textSize="16dp"/>


            <TextView
                android:id="@+id/paginaOficial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/titleHistoria"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="45dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="45dp"
                android:layout_marginBottom="50dp"
                android:autoLink="web"
                android:text=""
                android:textSize="16dp"
                android:linksClickable="true"/>


        </LinearLayout>

    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="320dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="30dp"
        android:clickable="true"
        app:backgroundTint="#D93671"
        app:borderWidth="0dp"
        app:srcCompat="@drawable/ic_baseline_add_24"
        app:tint="#FFFFFF"
        />


</RelativeLayout>