<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DenunciaActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:background="#14B2B2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/sitioName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autoSizeMaxTextSize="25sp"
                    android:autoSizeMinTextSize="12sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:gravity="center"
                    android:text="TextView"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </LinearLayout>


            <ImageView
                android:id="@+id/imagenDenuncia"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="45dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="45dp"
                android:layout_marginBottom="0dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/esencia_patrimonio"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="45dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="45dp"
                android:textColor="@color/quantum_grey600"
                android:text="Descripción"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/descripcionDenuncia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="45dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="45dp"
                android:text="Descripción de la Denuncia"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"

                >

                <Button
                    android:id="@+id/btnInvalida"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="20dp"
                    android:drawableLeft="@drawable/ic_invalida"
                    android:drawableTint="@color/white"
                    android:backgroundTint="#A54343"
                    android:gravity="center"
                    android:text="@string/invalida" />

                <Button
                    android:id="@+id/btnProcesada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:drawableLeft="@drawable/ic_procesada"
                    android:drawableTint="@color/white"
                    android:gravity="center"
                    android:text="@string/procesada"
                    android:backgroundTint="#249A08" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>