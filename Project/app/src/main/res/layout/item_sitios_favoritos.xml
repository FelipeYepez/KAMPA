<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_rectangle_list"
    android:layout_margin="20dp">

    <ImageView
        android:id="@+id/ivFotoSitio"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tvSitioTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivFotoSitio"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="15dp"
        android:layout_toEndOf="@+id/ivFotoSitio"
        android:maxLines="2"
        android:text="@string/nombre_del_sitio"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvSitioDescription"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSitioTitle"
        android:layout_alignBottom="@+id/ivFotoSitio"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/ivFotoSitio"
        android:maxLines="4"
        android:text="@string/descripcion_sitio"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <ImageButton
        android:id="@+id/ibDirections"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvSitioDescription"
        android:layout_alignEnd="@+id/tvSitioTitle"
        android:layout_alignBottom="@+id/tvSitioDescription"
        android:layout_toEndOf="@+id/tvSitioDescription"
        android:background="@android:color/transparent"
        android:src="@android:drawable/ic_menu_directions"
        app:tint="@color/amarilloEsenciaPatrimonio" />

</RelativeLayout>