<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearDenunciaActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:background="#14B2B2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autoSizeMaxTextSize="25sp"
                    android:autoSizeMinTextSize="12sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:gravity="center"
                    android:text="TextView"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="45dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="45dp"
                android:gravity="center"
                android:text="Crear Denuncia de Mal Uso"
                android:textSize="26dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/titleDescripcion"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="45dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="45dp"
                android:layout_marginBottom="0dp"
                android:ems="10"
                android:hint="Agrega descripción de la Denuncia"
                android:inputType="textMultiLine"
                android:singleLine="false"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/subirImagenBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="30dp"
                    android:drawableLeft="@drawable/ic_baseline_image_24"
                    android:drawableTint="#ECB518"
                    android:gravity="center"
                    android:text="Galería"
                    android:textColor="@color/black"
                    app:backgroundTint="@color/white" />

                <Button
                    android:id="@+id/tomarFotoBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="30dp"
                    android:drawableLeft="@drawable/ic_camera"
                    android:drawableTint="#ECB518"
                    android:gravity="center"
                    android:text="Cámara"
                    android:textColor="@color/black"
                    app:backgroundTint="@color/white" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imagenDenuncia"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="45dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="45dp"
                android:layout_marginBottom="0dp"
                android:scaleType="centerCrop" />

            <Button
                android:id="@+id/enviarDenunciaBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:drawableLeft="@drawable/ic_baseline_warning_24"
                android:drawableTint="@color/white"
                android:gravity="center"
                android:text="Enviar Denuncia"
                app:backgroundTint="#D93671" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>